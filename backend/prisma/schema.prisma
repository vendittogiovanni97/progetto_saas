generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
}

enum Status {
  ATTIVO
  DISATTIVATO
  ARCHIVIATO
}

model Account {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      Role      @default(USER)
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Category {
  id               Int    @id @default(autoincrement())
  name             String    // "Chatbot AI", "Form Builder"
  description      String    @db.Text
  icon             String?   // Icona UI
  color            String?   // Colore UI
  projects         Project[]
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Project {
  id         Int       @id @default(autoincrement())
  name       String
  status     Status   @default(ATTIVO)
  categoryId Int      // "chatbot", "form", "crm"
  category   Category  @relation(fields: [categoryId], references: [id])
  structure  String?   @db.Text // Config PERSONALIZZATA
  accountId  Int
  account    Account   @relation(fields: [accountId], references: [id])
  chatbots   Chatbot[] // Popolato solo se categoryId = "chatbot"
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([accountId])
  @@index([categoryId])
  @@index([status])
  @@index([createdAt])
}

model Chatbot {
  id            Int            @id @default(autoincrement())
  name          String?        // "Bot principale", "Bot secondario" (opzionale)
  projectId     Int
  project       Project        @relation(fields: [projectId], references: [id])
  conversations Conversation[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([projectId])
  @@index([createdAt])
}

model Conversation {
  id        Int       @id @default(autoincrement())
  chatbotId Int
  chatbot   Chatbot   @relation(fields: [chatbotId], references: [id])
  visitorId String?
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([chatbotId])
  @@index([createdAt])
}

model Message {
  id             Int          @id @default(autoincrement())
  conversationId Int
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  role           String      
  content        String       @db.Text
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}